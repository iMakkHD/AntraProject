@{
}
@model MovieResponseModel
<div class="container">
	<h3 class="display-4">@Model.Title Details</h3> <hr>
	<div class="row">
		<div class="col-4">
			<img src="@Model.PosterUrl" />
		</div>
		<div class="col-8">
			<ul class="list-group">
				<li class="list-group-item">Title - @Model.Title</li>
				<li class="list-group-item">Tagline - @Model.Tag</li>
				<li class="list-group-item">Runtime - @Model.Runtime | Budget: $@Model.Budget</li>
				<li class="list-group-item">Description - @Model.Overview</li>
				<li class="list-group-item">Language - @Model.OriginalLanguage | Release Date - @Model.ReleaseDate</li>
			</ul>
			<div class="row">
                @foreach (var mcast in @Model.MovieCasts)
                {
                    <div class="col-6 mb-4">
                        <div class="card" style="width: 18rem;">
                            <img src="@mcast.Cast.ProfilePath" width="50px" height="200px" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@mcast.Cast.Name</h5>
                                <p class="card-text">@mcast.Cast.Gender</p>
                            </div>
                        </div>
                    </div>
                    <br />
                }
            </div>
		</div>
	</div>
</div>
